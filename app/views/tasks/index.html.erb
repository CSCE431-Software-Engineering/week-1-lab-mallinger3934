
<div class="tasks index">
    <h2>Book Collection<h2>
    
    <%= link_to("Add New Book", new_task_path, class: 'action new') %>

    <table class="listing" summary="Task list" style="width: 100%;">
        <tr class="header">
            <th>#</th>
            <th>Book</th>
            <th>Completed</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.position %></td>
            <td><%= book.name %></td>
            <td><%= book.completed? ? 'Yes' : 'No' %></td>
            <td><%= book.category&.name || '-' %></td>
            <td class="actions">
                <%= link_to("Show", task_path(book), class: 'action show') %>
                <%= link_to("Edit", edit_task_path(book), class: 'action edit') %>
                <%= link_to("Delete", delete_task_path(book), class: 'action delete') %>
            </td>
        </tr>
        <% end %>
    </table>
</div>