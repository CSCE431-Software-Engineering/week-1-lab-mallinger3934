<%= link_to("Back to Homepage", tasks_path, class: 'back-link') %>

<div class="tasks edit">
    <h2>Edit Book<h2>

    <%= form_for(@book, url: task_path(@book), method: 'patch') do |f| %>
        <% # url: task_path(@book), method: 'patch' %>
        
        <table summary="Task form fields">
            <tr>
                <th>Name</th>
                <td><%= f.text_field(:name) %></td>
            </tr>
            <tr>
                <th>Position</th>
                <td><%= f.text_field(:position) %></td>
            </tr>
            <tr>
                <th>Completed</th>
                <td><%= f.check_box(:completed) %></td>
            </tr>
            <tr>
                <th>Description</th>
                <td><%= f.text_area(:description) %></td>
            </tr>
        </table>

        <div class="form-buttons">
            <%= f.submit("Edit Task") %>
        </div>

    <% end %>
</div>